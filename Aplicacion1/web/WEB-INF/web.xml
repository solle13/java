<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidarServlet</servlet-name>
        <servlet-class>Aplicacion1.Controlador.ValidarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrearServlet</servlet-name>
        <servlet-class>Aplicacion1.Controlador.CrearServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarServlet</servlet-name>
        <servlet-class>Aplicacion1.Controlador.EliminarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarServlet</servlet-name>
        <servlet-class>Aplicacion1.Controlador.ModificarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarServlet</servlet-name>
        <servlet-class>Aplicacion1.Controlador.CerrarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidarServlet</servlet-name>
        <url-pattern>/Validacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrearServlet</servlet-name>
        <url-pattern>/Crear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarServlet</servlet-name>
        <url-pattern>/Eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarServlet</servlet-name>
        <url-pattern>/Modificar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarServlet</servlet-name>
        <url-pattern>/Cerrar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
